<h1>NBA Standings</h1>

<%= button_to 'Refresh Standings', refresh_teams_path, class: 'btn btn-primary' %>
<div class="timestamp">(Add timestamp)</div>

<div class="row">
	<div class="col-sm-6">
		<h2>Western Conference</h2>
		<table class="table table-striped table-condensed">
			<thead>
				<tr>
					<th>Team</th>
					<th>Won</th>
					<th>Lost</th>
					<th>Played</th>
					<th>Streak</th>
				</tr>
			</thead>
		  <%= render @western_teams %>
		</table>
	</div>

	<div class="col-sm-6">
		<h2>Eastern Conference</h2>
		<table class="table table-striped table-condensed">
			<thead>
				<tr>
					<th>Team</th>
					<th>Won</th>
					<th>Lost</th>
					<th>Played</th>
					<th>Streak</th>
				</tr>
			</thead>
		  <%= render @eastern_teams %>
		</table>
	</div>
</div>

<div class="row">
	<div class="col-sm-12">
		<h2>Combined Conferences</h2>
		<table class="table table-striped table-condensed">
			<thead>
				<tr>
					<th>Team</th>
					<th>Won</th>
					<th>Lost</th>
					<th>Played</th>
					<th>Streak</th>
				</tr>
			</thead>
		  <%= render @all_teams %>
		</table>
	</div>
</div>
